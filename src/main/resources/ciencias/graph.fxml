<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            stylesheets="@estilos.css"
            prefHeight="620.0" prefWidth="1080.0" 
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ciencias.GraphController">
   
   <bottom>
      <ButtonBar prefHeight="53.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
         <buttons>
            <Button minWidth="58.0" mnemonicParsing="false" onAction="#menu" 
                    prefHeight="39.0" prefWidth="149.0" text="Volver al menu" translateX="-10.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
   </bottom>
   
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" 
               tabClosingPolicy="UNAVAILABLE" tabMinHeight="40.0" tabMinWidth="200.0" 
               BorderPane.alignment="CENTER">
         <tabs>
            <!-- Remover onSelectionChanged de todos los tabs -->
            <Tab fx:id="tabOperations" text="Operaciones entre grafos">
               <content>
                  <ScrollPane fx:id="scrollOperations" prefHeight="480.0" prefWidth="1020.0" />
               </content>
            </Tab>
            <Tab fx:id="tabTrees" text="Arboles como grafos">
               <content>
                  <ScrollPane fx:id="scrollTrees" prefHeight="480.0" prefWidth="1020.0" />
               </content>
            </Tab>
            <Tab fx:id="tabRepresentation" text="Representacion de grafos">
               <content>
                  <ScrollPane fx:id="scrollRepresentation" prefHeight="480.0" prefWidth="1020.0" />
               </content>
            </Tab>
            <Tab fx:id="tabColor" text="Coloreado de grafos">
               <content>
                  <ScrollPane fx:id="scrollColor" prefHeight="480.0" prefWidth="1020.0" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>