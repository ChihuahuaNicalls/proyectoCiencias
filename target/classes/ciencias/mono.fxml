<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="1000.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.IndexController_Completo">
   <children>
      <!-- HEADER -->
      <TextFlow layoutX="30.0" layoutY="14.0" prefHeight="35.0" prefWidth="400.0" textAlignment="LEFT">
         <children>
            <Label fx:id="titleIndex" text="Estructura de Índices">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
         </children>
      </TextFlow>

      <!-- SECCIÓN 1: SELECCIÓN DE TIPO DE ÍNDICE -->
      <Label layoutX="30.0" layoutY="55.0" text="Seleccionar tipo de índice:" style="-fx-font-weight: bold;" />
      <ComboBox fx:id="cmbTipoIndice" layoutX="30.0" layoutY="80.0" prefHeight="25.0" prefWidth="150.0" />

      <Separator layoutX="30.0" layoutY="120.0" prefWidth="1140.0" />

      <!-- SECCIÓN 2: CREAR ESTRUCTURA DE DATOS -->
      <Label layoutX="30.0" layoutY="140.0" text="Crear Estructura de Datos" style="-fx-font-weight: bold; -fx-font-size: 14;" />
      <Label layoutX="30.0" layoutY="170.0" text="Cantidad de campos:" />
      <TextField fx:id="txtCantidadCampos" layoutX="200.0" layoutY="166.0" prefHeight="25.0" prefWidth="80.0" promptText="Ej: 5" />
      <Label layoutX="30.0" layoutY="205.0" text="Longitud registro (bytes):" />
      <TextField fx:id="txtLongitudRegistro" layoutX="200.0" layoutY="201.0" prefHeight="25.0" prefWidth="80.0" promptText="Ej: 100" />
      <Label layoutX="30.0" layoutY="240.0" text="Tamaño de bloque (bytes):" />
      <TextField fx:id="txtTamañoBloque" layoutX="200.0" layoutY="236.0" prefHeight="25.0" prefWidth="80.0" promptText="Ej: 4096" />
      <Label layoutX="30.0" layoutY="275.0" text="Cantidad total de registros:" />
      <TextField fx:id="txtCantidadRegistros" layoutX="200.0" layoutY="271.0" prefHeight="25.0" prefWidth="80.0" promptText="Ej: 1000" />
      <Button fx:id="btnCrearEstructura" layoutX="200.0" layoutY="305.0" mnemonicParsing="false"
              onAction="#crearEstructuraDatos" text="Crear Estructura" style="-fx-font-weight: bold;" />

      <Separator layoutX="30.0" layoutY="345.0" prefWidth="1140.0" />

      <!-- SECCIÓN 3: INGRESO DE DATOS -->
      <Label layoutX="30.0" layoutY="365.0" text="Ingreso de Datos" style="-fx-font-weight: bold; -fx-font-size: 14;" />
      <Pane fx:id="panelCamposVistaData" layoutX="30.0" layoutY="395.0" prefHeight="120.0" prefWidth="400.0"
            style="-fx-border-color: #cccccc; -fx-border-radius: 3; -fx-padding: 10;" />
      <Button fx:id="btnAgregarRegistro" layoutX="200.0" layoutY="530.0" mnemonicParsing="false"
              onAction="#agregarRegistro" text="Agregar Registro" style="-fx-font-weight: bold;" />
      <TextFlow layoutX="30.0" layoutY="570.0" prefHeight="25.0" prefWidth="400.0" textAlignment="LEFT">
         <children>
            <Text fx:id="txtRegistrosCount" strokeType="OUTSIDE" strokeWidth="0.0" text="Registros: 0/0" />
         </children>
      </TextFlow>

      <Separator layoutX="30.0" layoutY="610.0" prefWidth="1140.0" />

      <!-- SECCIÓN 4: PARÁMETROS DE ÍNDICE -->
      <Label layoutX="30.0" layoutY="630.0" text="Parámetros de Índice" style="-fx-font-weight: bold; -fx-font-size: 14;" />
      <TextFlow fx:id="flowPrimarioInfo" layoutX="30.0" layoutY="660.0" prefHeight="80.0" prefWidth="400.0"
                 style="-fx-border-color: #e0e0e0; -fx-padding: 10;">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0"
                  text="ÍNDICE PRIMARIO:&#10;Tipo: No denso&#10;Campo: Clave Primaria&#10;Puntero: Número de bloque" />
         </children>
      </TextFlow>
      <Label fx:id="lblCampoSecundario" layoutX="30.0" layoutY="660.0" text="Campo de indexación (SECUNDARIO):" />
      <ComboBox fx:id="cmbCampoIndexacion" layoutX="250.0" layoutY="656.0" prefHeight="25.0" prefWidth="180.0" />
      <Label layoutX="30.0" layoutY="700.0" text="Longitud campo índice (bytes):" />
      <TextField fx:id="txtLongitudCampoIndice" layoutX="250.0" layoutY="696.0" prefHeight="25.0"
                 prefWidth="80.0" promptText="Ej: 20" />
      <Label layoutX="30.0" layoutY="735.0" text="Longitud puntero (bytes):" />
      <TextField fx:id="txtLongitudPuntero" layoutX="250.0" layoutY="731.0" prefHeight="25.0"
                 prefWidth="80.0" promptText="Ej: 4" />
      <Button fx:id="btnCrearIndice" layoutX="250.0" layoutY="765.0" mnemonicParsing="false"
              onAction="#crearEstructuraIndice" text="Crear Índice" style="-fx-font-weight: bold;" />

      <Separator layoutX="30.0" layoutY="810.0" prefWidth="1140.0" />

      <!-- SECCIÓN 5: RESULTADOS -->
      <Label layoutX="30.0" layoutY="830.0" text="Resultados:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
      <TextFlow layoutX="30.0" layoutY="860.0" prefHeight="110.0" prefWidth="1140.0">
         <children>
            <Text fx:id="txtResultados" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="1140.0"
                  text="Los resultados aparecerán aquí después de crear un índice..." />
         </children>
      </TextFlow>

      <!-- BOTONES DE UTILIDAD -->
      <Button fx:id="btnReiniciar" layoutX="30.0" layoutY="960.0" mnemonicParsing="false"
              onAction="#reiniciar" text="Reiniciar" disable="true" />
      <Button fx:id="btnGuardar" layoutX="1100.0" layoutY="960.0" mnemonicParsing="false"
              onAction="#guardarResultados" text="Guardar" disable="true" />
   </children>
</Pane>
